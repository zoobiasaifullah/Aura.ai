<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Primary Meta Tags -->
    <title>{{ page_title }}{% if current_tags %} &ndash; {{ current_tags | join: ', ' }}{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>
    
    {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ canonical_url }}">
    <meta property="og:title" content="{{ page_title }}">
    {% if page_description %}
    <meta property="og:description" content="{{ page_description | escape }}">
    {% endif %}
    {% if page_image %}
    <meta property="og:image" content="http:{{ page_image | img_url: '1200x630' }}">
    <meta property="og:image:secure_url" content="https:{{ page_image | img_url: '1200x630' }}">
    {% endif %}
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:title" content="{{ page_title }}">
    {% if page_description %}
    <meta property="twitter:description" content="{{ page_description | escape }}">
    {% endif %}
    {% if page_image %}
    <meta property="twitter:image" content="https:{{ page_image | img_url: '1200x630' }}">
    {% endif %}
    
    <!-- Canonical URL -->
    <link rel="canonical" href="{{ canonical_url }}">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="{{ 'favicon-32x32.png' | asset_url }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ 'favicon-16x16.png' | asset_url }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ 'apple-touch-icon.png' | asset_url }}">
    
    <!-- Preconnect to required origins -->
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Theme CSS -->
    {{ 'styles.css' | asset_url | stylesheet_tag }}
    
    <!-- Shopify Required -->
    {{ content_for_header }}
    
    <!-- Theme Settings JavaScript -->
    <script>
      window.theme = {
        routes: {
          cart_url: '{{ routes.cart_url }}',
          cart_add_url: '{{ routes.cart_add_url }}',
          cart_change_url: '{{ routes.cart_change_url }}'
        },
        strings: {
          addToCart: {{ 'products.product.add_to_cart' | t | json }},
          soldOut: {{ 'products.product.sold_out' | t | json }},
          unavailable: {{ 'products.product.unavailable' | t | json }}
        },
        moneyFormat: {{ shop.money_format | json }}
      };
    </script>
</head>
<body class="template-{{ template | replace: '.', ' ' | handleize }}">
    
    <!-- Skip to content link for accessibility -->
    <a class="skip-to-content-link button visually-hidden" href="#MainContent">
        Skip to content
    </a>
    
    <!-- Header -->
    {% section 'header' %}
    
    <!-- Main Content -->
    <main id="MainContent" class="content-for-layout" role="main" tabindex="-1">
        {{ content_for_layout }}
    </main>
    
    <!-- Footer -->
    {% section 'footer' %}
    
    <!-- Back to Top Button -->
    <button id="back-to-top" class="back-to-top" aria-label="Back to top">
        <i class="fas fa-arrow-up"></i>
    </button>
    
    <!-- Theme JavaScript -->
    {{ 'main.js' | asset_url | script_tag }}
    
</body>
</html>
