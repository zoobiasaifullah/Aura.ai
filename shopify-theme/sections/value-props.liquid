<section class="value-props-section">
  <div class="container">
    <div class="value-props-grid">
      {% for block in section.blocks %}
        <div class="value-prop-item" {{ block.shopify_attributes }}>
          <div class="value-prop-icon">
            <i class="fas {{ block.settings.icon }}"></i>
          </div>
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Value Propositions",
  "blocks": [
    {
      "type": "value_prop",
      "name": "Value Prop",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (Font Awesome)",
          "default": "fa-star"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Value Propositions"
    }
  ]
}
{% endschema %}
