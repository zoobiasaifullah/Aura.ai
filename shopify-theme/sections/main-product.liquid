<div class="product-page">
  <div class="container">
    <div class="product-grid">
      <div class="product-images">
        {% if product.featured_image %}
          <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.title }}" id="main-product-image">
        {% endif %}
        
        {% if product.images.size > 1 %}
          <div class="product-thumbnails">
            {% for image in product.images %}
              <img src="{{ image | img_url: '100x100' }}" alt="{{ product.title }}" class="thumbnail">
            {% endfor %}
          </div>
        {% endif %}
      </div>
      
      <div class="product-info">
        <h1>{{ product.title }}</h1>
        <p class="product-price">{{ product.price | money }}</p>
        
        {% if product.description != blank %}
          <div class="product-description">
            {{ product.description }}
          </div>
        {% endif %}
        
        <form action="/cart/add" method="post" class="product-form">
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          
          {% unless product.has_only_default_variant %}
            <select name="id" class="product-variants">
              {% for variant in product.variants %}
                <option value="{{ variant.id }}" {% unless variant.available %}disabled{% endunless %}>
                  {{ variant.title }} - {{ variant.price | money }}
                </option>
              {% endfor %}
            </select>
          {% endunless %}
          
          <button type="submit" class="btn btn-primary" {% unless product.available %}disabled{% endunless %}>
            {% if product.available %}Add to Cart{% else %}Sold Out{% endif %}
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product",
  "settings": []
}
{% endschema %}
