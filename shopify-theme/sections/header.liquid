<!-- Main Header Section -->
<header class="header" id="header">
    <div class="container">
        <div class="header-content flex justify-between items-center">
            <a href="{{ routes.root_url }}" class="logo inline-block">
                {% if section.settings.logo != blank %}
                    <img src="{{ section.settings.logo | img_url: '200x' }}" 
                         alt="{{ shop.name }}" 
                         loading="lazy">
                {% else %}
                    <span class="logo-text flex items-center">
                        <span class="logo-name">{{ shop.name }}</span>
                    </span>
                {% endif %}
            </a>
            
            <nav class="nav flex items-center" id="main-nav" aria-label="Main navigation" role="navigation">
                {% for link in section.settings.menu.links %}
                    <a href="{{ link.url }}" 
                       class="nav-link{% if link.active %} active{% endif %}{% if link.title == section.settings.cta_text %} btn btn-primary{% endif %}"
                       {% if link.active %}aria-current="page"{% endif %}>
                       {{ link.title }}
                    </a>
                {% endfor %}
                
                <a href="{{ routes.cart_url }}" class="nav-link cart-link">
                    <i class="fas fa-shopping-bag"></i>
                    <span class="cart-count" data-cart-count>{{ cart.item_count }}</span>
                </a>
            </nav>
            
            <button class="mobile-menu-toggle" 
                    aria-label="Toggle mobile menu" 
                    aria-expanded="false" 
                    aria-controls="main-nav">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Get Your Routine",
      "info": "Navigation link with this text will be styled as a button"
    }
  ]
}
{% endschema %}
