<section class="hero flex items-start justify-center" style="background: linear-gradient(180deg, {{ section.settings.gradient_start }} 0%, {{ section.settings.gradient_end }} 100%);">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">{{ section.settings.title }}</h1>
            <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
            
            <div class="hero-buttons flex justify-center items-center flex-wrap">
                {% if section.settings.cta_primary_text != blank %}
                <a href="{{ section.settings.cta_primary_url }}" class="btn btn-primary">
                    {% if section.settings.cta_primary_icon != blank %}<i class="fas {{ section.settings.cta_primary_icon }}"></i> {% endif %}
                    {{ section.settings.cta_primary_text }}
                </a>
                {% endif %}
                
                {% if section.settings.cta_secondary_text != blank %}
                <a href="{{ section.settings.cta_secondary_url }}" class="btn btn-outline">
                    {% if section.settings.cta_secondary_icon != blank %}<i class="fas {{ section.settings.cta_secondary_icon }}"></i> {% endif %}
                    {{ section.settings.cta_secondary_text }}
                </a>
                {% endif %}
            </div>
            
            <!-- Trust Bar - Integrated Above the Fold -->
            <div class="hero-trust-bar flex justify-center items-center flex-wrap">
                {% for block in section.blocks %}
                    <div class="trust-item flex items-center" {{ block.shopify_attributes }}>
                        <i class="fas {{ block.settings.icon }}"></i>
                        <span>{{ block.settings.text }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Hero Title",
      "default": "Your Personalized Skincare Routine in Minutes"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Hero Subtitle",
      "default": "AI-powered skin analysis through selfies + smart quiz = 2-3 essential products tailored to you"
    },
    {
      "type": "color",
      "id": "gradient_start",
      "label": "Background Gradient Start",
      "default": "#FFF9FB"
    },
    {
      "type": "color",
      "id": "gradient_end",
      "label": "Background Gradient End",
      "default": "#F8F4FB"
    },
    {
      "type": "header",
      "content": "Primary CTA"
    },
    {
      "type": "text",
      "id": "cta_primary_text",
      "label": "Primary Button Text",
      "default": "Get My Free Analysis"
    },
    {
      "type": "url",
      "id": "cta_primary_url",
      "label": "Primary Button URL",
      "default": "/pages/skin-analysis"
    },
    {
      "type": "text",
      "id": "cta_primary_icon",
      "label": "Primary Button Icon (Font Awesome class)",
      "default": "fa-camera",
      "info": "Example: fa-camera, fa-arrow-right"
    },
    {
      "type": "header",
      "content": "Secondary CTA"
    },
    {
      "type": "text",
      "id": "cta_secondary_text",
      "label": "Secondary Button Text",
      "default": "See How It Works"
    },
    {
      "type": "url",
      "id": "cta_secondary_url",
      "label": "Secondary Button URL",
      "default": "#how-it-works"
    },
    {
      "type": "text",
      "id": "cta_secondary_icon",
      "label": "Secondary Button Icon",
      "default": "fa-play-circle"
    }
  ],
  "blocks": [
    {
      "type": "trust_item",
      "name": "Trust Badge",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (Font Awesome class)",
          "default": "fa-shield-check"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Privacy Protected"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "blocks": [
        {
          "type": "trust_item",
          "settings": {
            "icon": "fa-shield-check",
            "text": "Privacy Protected"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "fa-microscope",
            "text": "Dermatology-Backed"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "fa-certificate",
            "text": "Science-Based AI"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "fa-users",
            "text": "10,000+ Happy Users"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "fa-leaf",
            "text": "100% Transparent"
          }
        }
      ]
    }
  ]
}
{% endschema %}
